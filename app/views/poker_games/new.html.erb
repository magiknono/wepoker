<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="user-form-devise">

      <h2>Create a poker game</h2>
<%= simple_form_for(@pokergame) do |f| %>


          <%= f.input :date, as: :date_picker, required: true, autofocus: true, label: 'Date of the event' %>

          <%= f.input :hour, as: :time_picker, required: true, label: 'Hour of the event'%>

          <%= f.input :description, required: true, label: "Description"%>

          <%= f.input :nb_players_required, required: true, input_html: { value: '5' },label: "Combien de joueurs recherchez-vous ?" %>

        <%= f.input :gametype, label: "Quel type de partie ?", collection: [["tournoi", "tournoi"], ["cashgame", "cashgame"]] %>
        <!-- <select name="category" class="form-control" required>
            <option >Type de jeu</option>

            <option value="tournoi"/>tournoi</option>
            <option value="cash-game"/>cashgame</option>

        </select> -->


          <%= f.input :street_address  %>
          <%= f.input :zipcode_address %>
          <%= f.input :city_address %>



      <%= f.button :submit, "Submit" %>

    <% end %>
   </div>
  </div>
</div>

