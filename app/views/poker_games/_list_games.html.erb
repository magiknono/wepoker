<div class="col-md-10 col-md-offset-1">
  <h3>Pokergames listing</h3>


  <% pokergames.each do |pokergame| %>
  <div class="user-form-devise">
    <div class="row">
      <div class="col-md-9">
    <%= link_to(poker_game_path(pokergame.id)) do %>
    <h2><%= pokergame.description %></h2>
    <% end %>
    le <%= pokergame.date.strftime("%d/%m/%Y") %> Ã  <%= pokergame.hour.strftime("%H:%M") %>

    <p><%= pokergame.city_address %></p>
      </div>
      <div class="col-md-2">
        <br />
    <p><%= link_to user_path(pokergame.creator.id) do %><%= pokergame.creator.name %><% end %><%= image_tag(pokergame.creator.picture(:navbar)) %></p>
    <br />
    <p><%= pokergame.gametype %></p>
  </div>
  </div>



  </div>
  <% end %>
  <%= paginate pokergames %>

</div>